{
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "C_Cpp.errorSquiggles": "disabled",

    "files.exclude":
    {
        "outputs/": true,
        "tools/": true,
        "assets/": true,

        // "sources/win32": true,
        "sources/win32/imgui": true,
        // "sources/i686-elf": true,
    },

    "C_Cpp.default.defines":
    [
        // shared
        "ENABLE_ASSERTIONS=",
        "_CRT_SECURE_NO_WARNINGS=",

        // build
        "_CRT_RAND_S=",

        // ray_tracer
        "SIMD_NUMBEROF_LANES=8",

        // imgui_demo
        "UNICODE=",
        "_UNICODE=",

        // handmade_hero
        "HANDMADE_WIN32=1",
        "HANDMADE_SLOW=1",
        "HANDMADE_INTERNAL=1",

        // lint
        "JOB_PER_FILE=",
        
        // os
        "packed=",
    ],
    "files.associations": {
        "*.s": "nasm",
        "*.i": "nasm",
        "gdt.h": "c",
        "idt.h": "c",
        "basic_defines.h": "c",
        "timing.h": "c",
        "disk.h": "c",
        "get.h": "c",
        "print.h": "c",
        "vga.h": "c"
    },
}